---
const { url, title, date, description } = Astro.props;
---

<a class="blog-card" href={url}>
  <div>
    <h3 class="title">{title}</h3>
    <p class="date">{date}</p>
    <p class="description">
      {description}
    </p>
  </div>
</a>

<style>
  .title {
    padding-top: 1.5rem;
    font-weight: var(--fw-medium);
    font-size: 1.5rem;
    text-align: center;
  }
</style>
